@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-left">
        <div class="col-md-6">
            <form asp-page-handler="Register" method="post" class="needs-validation" novalidate>
                <br /><br />
                <h1>Create a new account</h1>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.Name" class="form-control" autocomplete="username" required />
                    <label asp-for="Input.Name" class="form-label"></label>
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.Email" type="email" class="form-control" required />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.Password" type="password" class="form-control" required />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" required />
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.CourseName" class="form-control" required />
                    <label asp-for="Input.CourseName" class="form-label"></label>
                    <span asp-validation-for="Input.CourseName" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <select asp-for="Input.UniversityId" asp-items="@Model.Input.UniversityList" class="form-select" required>
                        <option value="">- Select your university -</option>
                    </select>
                    <div class="invalid-feedback">Please select your university.</div>
                    <span asp-validation-for="Input.UniversityId" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <select asp-for="Input.AreaOfStudy" asp-items="@Model.Input.AreaOfStudyList" class="form-select" required>
                        <option value="">- Select your area of study -</option>
                    </select>
                    <span asp-validation-for="Input.AreaOfStudy" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select" required>
                        <option value="">- Select if you wish to be a mentor or a mentee -</option>
                    </select>
                    <span asp-validation-for="Input.Role" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" required />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
