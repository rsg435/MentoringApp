@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-page-handler="Register" method="post" class="needs-validation" novalidate>
                <h2>Create a new account</h2>
                <hr />

                <div class="mb-3">
                    <label asp-for="Input.Name" class="form-label"></label>
                    <input asp-for="Input.Name" class="form-control" required />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" type="email" class="form-control" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" type="password" class="form-control" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" required />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.UniversityId" class="form-label"></label>
                    <select asp-for="Input.UniversityId" asp-items="@Model.Input.UniversityList" class="form-select" required>
                        <option value="">- Select your university -</option>
                    </select>
                    <div class="invalid-feedback">Please select your university.</div>
                    <span asp-validation-for="Input.UniversityId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.CourseName" class="form-label"></label>
                    <input asp-for="Input.CourseName" class="form-control" required />
                    <span asp-validation-for="Input.CourseName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.AreaOfStudy" class="form-label"></label>
                    <select asp-for="Input.AreaOfStudy" asp-items="@Model.Input.AreaOfStudyList" class="form-select" required>
                        <option value="">- Select your area of study -</option>
                    </select>
                    <span asp-validation-for="Input.AreaOfStudy" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.UserRole" class="form-label"></label>
                    <select asp-for="Input.UserRole" asp-items="Html.GetEnumSelectList<MentoringApp.Data.Models.UserRole>()" class="form-select" required>
                        <option value="">- Select if you wish to be a mentor or a mentee -</option>
                    </select>
                    <span asp-validation-for="Input.UserRole" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>


