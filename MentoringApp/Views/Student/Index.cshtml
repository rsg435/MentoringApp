@model IEnumerable<MentoringApp.Data.DTOs.StudentDto>

</br></br>
<div class="row pb-3">
	@foreach(var student in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
					<div class="card">
						<img src="@student.ProfilePicture" class="card-img-top rounded"/>

						<div class="card-body">
						<div class="pl-1">
							<p class="card-title h5 text-primary">@student.Name</p>
						</div>
						<div class="pl-1">
							<p><b>@student.CourseName</b></p>
						</div>
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-studentId="@student.Id">
							Details
						</a>
					</div>
				</div> 
			</div>
		</div>
	}
</div>